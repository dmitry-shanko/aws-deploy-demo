{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "ap-southeast-1",
      "source_ami_filter": {
        "filters": {
          "name": "amzn2-ami-hvm-*-x86_64-gp2"
        },
        "owners": ["137112412989"],
        "most_recent": true
      },
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "trade-signals-app-{{timestamp}}",
      "ami_description": "Trade Signals App AMI",
      "tags": {
        "App": "trade-signals"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/install_dependencies.sh"
    },
    {
      "type": "file",
      "source": "{{user `local_jar_path`}}",
      "destination": "/tmp/app.jar"
    },
    {
      "type": "shell",
      "script": "./scripts/copy_app.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/setup_systemd.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/setup_cloudwatch.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/cleanup.sh"
    }
  ]
}
